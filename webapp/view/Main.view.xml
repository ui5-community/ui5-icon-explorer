<mvc:View
    controllerName="de.kernich.icon.preview.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
>
    <Page>
        <customHeader>
            <core:Fragment
                fragmentName="de.kernich.icon.preview.view.fragments.Header"
                type="XML"
            />
        </customHeader>
        <content>
            <f:SidePanel id="IdSidePanel">
                <f:mainContent>
                    <f:GridList
                        items="{
                            path: 'icons>/',
                            sorter: {
                                path: 'fav',
                                descending: true
                            }
                        }"
                        id="IdGridList"
                        updateFinished=".onUpdateFinished"
                        noDataText="No icons found"
                        growing="true"
                        growingThreshold="100"
                        growingScrollToLoad="true"
                    >
                        <f:customLayout>
                            <grid:GridBasicLayout
                                gridTemplateColumns="repeat(7, 1fr)"
                                gridGap="0.5rem"
                            />
                        </f:customLayout>
                        <f:GridListItem
                            type="Active"
                            press=".onIconPress"
                        >
                            <VBox
                                alignItems="Center"
                                class="sapUiSmallMarginTop sapUiTinyMarginBottom"
                            >
                                <core:Icon
                                    src="{icons>src}"
                                    size="2.5rem"
                                    class="sapUiTinyMarginBottom"
                                />
                                <Text
                                    text="{icons>icon}"
                                    wrapping="false"
                                />
                                <HBox>
                                    <Label text="{
                                        path: 'icons>collection',
                                        formatter: '.formatter.formatCollectionName'
                                    }" />
                                </HBox>
                                <HBox>
                                    <Button
                                        icon="{
                                            path: 'icons>fav',
                                            formatter: '.formatter.formatFavIcon'
                                        }"
                                        type="Transparent"
                                        press=".onToggleIconFav"
                                    />
                                    <Button
                                        icon="sap-icon://copy"
                                        type="Transparent"
                                        press=".onCopy"
                                    />
                                </HBox>
                            </VBox>
                        </f:GridListItem>
                    </f:GridList>
                </f:mainContent>
                <f:items>
                    <core:Fragment
                        fragmentName="de.kernich.icon.preview.view.fragments.Sidebar"
                        type="XML"
                    />
                </f:items>
            </f:SidePanel>
        </content>
    </Page>
</mvc:View>
